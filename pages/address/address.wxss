/* pages/address/address.wxss */
.address-item{
  padding: 30rpx;
  padding-right: 80rpx;
  position: relative;
  border-bottom: 1px solid #f1f1f1;
}
.item-top{
  font-size: 32rpx;
  color: #333;
}
.item-top text:nth-child(1){
  margin-right: 10rpx;
}
.item-bottom{
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #888;
}
.address-item .icon{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #aaa;
}
.right-icon::after{
  content: '\e64a';
}
.add{
  height: 140rpx;
  line-height: 140rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}
.add text{
  background: #348ce6;
  padding: 10rpx 30rpx;
}
.add .icon-add{
  padding: 0;
  padding-right: 5px;
}
.icon-add::after{
  content: "\e613";
 
}