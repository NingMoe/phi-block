/* pages/c8/c8.wxss */
.wrapper-scroll{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
}
.buy{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #fff;
  background: #348ce6;
  padding: 8rpx 15rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.buy .shopcart{
  font-size: 32rpx;
  margin-right: 10rpx;
}
.shopcart::before{
  content: "\e620";
}
.intro{
  background: #fff;
  padding: 30rpx;
}
.intro .title,.intro1 .title,.content .title{
  text-align: center;
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.p{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
}
.p text{
  line-height: 28rpx;
}
.intro1{
  background: #fff;
  position: relative;
}
.content{
  padding: 30rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
}
.pdt60{
  padding-top: 60rpx;
}
.pdb60{
  padding-bottom: 60rpx;
}
.intro .no-center,.intro1 .no-center{
  text-align: left;
}
.white{
  color: #fff;
}
.star-icon::before{
  content: "\e615";
}
.how{
  font-size: 28rpx;
}
.how .star-icon{
  margin-right: 10rpx;
}
.pd30{
  padding: 30rpx;
}
.config-item view{
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
}
.config-item .config-name{
  width: 200rpx;
  float: left;
  color: #fff;
  background: #348ce6;
  box-sizing: border-box;
  border-bottom: 1px solid #3582dc;
}
.config-item .config-desc{
  color: #666666;
  background: #eef5f6;
}
.config-item .config-desc-white{
  background: #fff;
}
.center-p{
  text-align: center;
}
.serivce-item{
  background: #fff;
  padding: 30rpx;
  text-align: center;
  float: left;
  width: 49.5%;
  margin-bottom: 1%;
  height: 400rpx;
  box-sizing: border-box;
}
.mrdot5{
  margin-right: 1%;
}
.service-icon{
  width: 88rpx;
  height: 80rpx;
}
.service-title{
  color: #464646;
  font-size: 28rpx;
  margin: 30rpx 0;
}
.service-desc{
  color: #848484;
  font-size: 24rpx;
}
.c8-bottom{
  padding: 30rpx 0;
  font-size: 28rpx;
}
.c8-bottom>text{
  display: block;
  margin-bottom: 30rpx;
}
.more-icon::before{
  content: '\e602';
  margin-right: 8rpx;
}
.money-item{
  height: 240rpx;
  float: left;
  width: 50%;
  margin-top: 60rpx;
  position: relative;
  text-align: center;
}
.money-item .index{
  width: 50rpx;
  height: 50rpx;
  background: #153566;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 26rpx;
}
.money-item>image{
  width: 112rpx;
}
.money-item>view{
  width: 70%;
  margin: 0 auto;
}
.money-item>view>text{
  color: #666;
  font-size: 30rpx;
}
.chengnuo{
  background: #153566;
  border-radius: 15rpx;
  color: #fff;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.chengnuo view{
  height: 64rpx;
  line-height: 64rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.chengnuo view:nth-child(1){
  border-bottom: 1px solid #fff;
}
.att{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #888;
}
.p-title{
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.black{
  background: #000;
}
.question-item{
  padding: 30rpx;
  background: #fff;
  box-shadow: 0px 1px 10px rgba(255,255,255,0.7);
  margin: 20rpx 0;
}
.ask-icon::after{
  content: '\e7a1';
}
.answer-icon::after{
  content: '\e777';
}
.question-item text{
  font-size: 28rpx;
}
.question-item .ask{
  color: #348ce6;
}
.question-item .answer{
  color: #666;
}
.question-item .icon{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.intro1 .title , .intro .title{
  font-size: 48rpx;
}