/* pages/platinum/platinum.wxss */
.scroll,.content{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
}
.pos-bottom{
  position: absolute;
  left: 0;
  right: 0;
  height: 120rpx;
  bottom: 0;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.intro{
  position: relative;
}
.menu-item{
  color: #fff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 10rpx 5rpx;
  border: 1px solid #444;
  border-radius: 10rpx;
}
.platinum{
  height: 620rpx;
  width: 100%;
}
.posa{
  position: absolute;
  left: 0;
  top: 0;
}
.title{
  font-size: 50rpx;
  padding-top: 40rpx;
  color: #efd597;
  text-align: center;
  margin-bottom: 30rpx;
}
.title>text,.title>image{
  display: block;
  margin: 0 auto;
}
.title>image{
  margin-top: 10rpx;
}
.wenzi-into{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 0.11);
  color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.intro-wenzi{
  background: rgba(255, 255, 255, 0.11);
  color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.intro-wenzi text{
  display: block;
  padding-bottom: 30rpx;
}
.platinum1{
  background: #1c1c1c;
  height: auto;
}
.platinum2{
  position: relative;
  height: 1180rpx;
  width: 100%;
}
.wrap,.list{
  padding: 30rpx;
  box-sizing: border-box;
}
.list{
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.11);
}
.guize{
  font-size: 24rpx;
  color: #efd597;
}
.img1{
  width: 100%;
  height: 14rpx;
}
.list image{
  vertical-align: middle;
}
.guize .b{
  color: #fff;
}
.wrap1{
  background: #4f4a3d;
  font-size: 24rpx;
  color: #fff;
  margin-top: 30rpx;
}
.list_title{
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 30rpx;
}
.h2{
  width: 70rpx;
  font-size: 50rpx;
  color: #fff;
  float: left;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.ul{
  width: 100%;
  padding-left: 100rpx;
  box-sizing: border-box;
}
.li{
  min-height: 70rpx;
  background: #8e8269;
  border-radius: 10rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.triangle::after{
  content: '';
  display: block;
  position: absolute;
  left: 50%;
  bottom: -18rpx;
  border-left:20rpx solid #8e8269;
  
  border-top:20rpx solid transparent;
  transform: translateX(-50%) rotate(-45deg);
  transform-origin: 0 0;
}
.intro1{
  padding: 30rpx;
  box-sizing: border-box;
}
.app_down_wenzi{
  font-size: 24rpx;
  color: #a4a3a1;
}
.app_down_wenzi text{
  display: block;
  margin-bottom: 30rpx;
}
.app_icon{
  display: flex;
  justify-content: center;
}
.app_icon text:nth-child(1){
  margin-right: 30rpx;
}
.app_icon text{
  border-radius: 100rpx;
  padding: 10rpx 40rpx;
  background: #716852;
  color: #fff;
  font-size: 24rpx
}
.code{
  text-align: center;
  margin-top: 30rpx;
}
.code_wenzi{
  margin-top: 0;
  color: #fff;
  font-size: 24rpx;
}
.app_att{
  font-size: 24rpx;
  color: #b77533;
  margin-top: 30rpx;
}
.app_att text{
  display: block;
}
.shuo{
  color: #fff;
}
.wrapper{
  background: #2f2e2b;
  padding: 30rpx;
}
.intro-wenzi .ti{
  font-size: 32rpx;
  text-align: center;
}