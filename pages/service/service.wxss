/* pages/service/service.wxss */

.scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.intro{
  padding: 30rpx;
  box-sizing: border-box;
}
.intro>.title{
  text-align: center;
}
.question-item{
  padding: 30rpx;
  background: #fff;
  box-shadow: 0px 1px 10px rgba(0,0,0,0.2);
  margin: 20rpx 0;
}
.ask-icon::after{
  content: '\e7a1';
}
.answer-icon::after{
  content: '\e777';
}
.question-item text{
  font-size: 28rpx;
}
.question-item .ask{
  color: #348ce6;
}
.question-item .answer{
  color: #666;
}
.question-item .icon{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.intro1 .title , .intro .title{
  font-size: 48rpx;
}
.desc{
  font-size: 24rpx;
  color: #aaa;
  margin: 30rpx 0;
}
.flex{
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.flex text{
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border: 1px solid #ccc;
  color: #555;
  background: #f1f1f1;
  margin: 0 10rpx;
}
.flex text.active_menu{
  color: #fff;
  background: #348ce6;
  border-color: #348ce6;
}