/* pages/n1m/n1m.wxss */
.wrapper-scroll{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
}
.buy{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  color: #fff;
  background: #348ce6;
  padding: 8rpx 15rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
}
.buy .shopcart{
  font-size: 32rpx;
  margin-right: 10rpx;
}
.shopcart::before{
  content: "\e620";
}
.intro{
  background: #fff;
  padding: 30rpx;
}
.intro .title{
  text-align: center;
  margin: 30rpx 0;
  color: #464646;
  font-size: 40rpx;
}
.intro .p{
  font-size: 28rpx;
  color: #646464;
  margin-bottom: 20rpx;
}
.more::before{
  content: '\e602';
}
.tomore{
  text-align: center;
  color: #017ad8;
  margin-bottom: 40rpx;
}
.tomore .more-btn{
  font-size: 28rpx;
  padding: 4rpx 8rpx;
  border: 1px solid #017ad8;
  border-radius: 10rpx;
  
}
.tomore .icon{
  margin-left: 10rpx;
}
.box{
  padding: 60rpx 30rpx;
  background: #07254f;
  padding-bottom: 0rpx;
}
.operating{
  width: 49%;
  height: 424rpx;
  float: left;
  border: 1px solid #017ad8;
  margin-bottom: 60rpx;
  box-sizing: border-box;
  position: relative;
  padding:30rpx;
  padding-top: 60rpx;
}
.mr2{
  margin-right: 2%;
}
.top-img{
  position: absolute;
  left: 20rpx;
  top: -16rpx;
  width: 60rpx;
}
.step-index{
  font-weight: bold;
  color: #348ce6;
  font-size: 46rpx;
  line-height: 40rpx;
}
.step-name{
  color: #8ca9d0;
  font-size: 36rpx;
  font-weight: bold;
}
.step-desc{
  color: #41689f;
  font-size: 24rpx;
}
.intro1{
  position: relative;
}
.n1m-img{
  width: 100%;
  text-align: center;
  background: #000;
}
.img1{
  width: 60%;
  vertical-align: top;
}
.content{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  color: #fff;
  padding: 30rpx;
}
.pt40{
  padding-top: 40rpx;
}
.pt80{
  padding-top: 80rpx;
}
.content .title{
  text-align: center;
}
.list-act .act-item{
  float: left;
  width: 33.33%;
  text-align: center;
  margin-top: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.list-act .act-item text{
  font-size: 24rpx;
}
.img3{
  width: 42rpx;
}
.center-p{
  font-size: 24rpx;
  text-align: center;
  margin-top: 20rpx;
}
.serivce-item{
  background: #fff;
  padding: 30rpx;
  text-align: center;
  float: left;
  width: 49.5%;
  margin-bottom: 1%;
  height: 400rpx;
  box-sizing: border-box;
}
.mrdot5{
  margin-right: 1%;
}
.service-icon{
  width: 88rpx;
  height: 80rpx;
}
.service-title{
  color: #464646;
  font-size: 28rpx;
  margin: 30rpx 0;
}
.service-desc{
  color: #848484;
  font-size: 24rpx;
}
.t1{
  color: #cfe0f6;
  font-size: 32rpx;
  margin: 30rpx 0;
}
.t2{
  font-size: 24rpx;
  margin: 0;
  margin-bottom: 20rpx;
}
.title1{
  color: #464646;
}
.p1{
  color: #848484;
}
.p-box{
  position: relative;
  background: #f6f6f6;
  padding: 20rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
  border-top: 1px solid #348ce6;
}
.p-box text{
  font-size: 24rpx;
  margin: 10rpx 0;
  display: block;
  color: #848484;
}
.p-box .p-box-title{
  display: inline-block;
  position: absolute;
  color: #fff;
  padding: 15rpx 30rpx;
  background: #348ce6;
  box-sizing: border-box;
  border: 4px solid #fff;
  
  top: -50rpx;
}
.question-item{
  padding: 30rpx;
  background: #fff;
  box-shadow: 0px 1px 10px rgba(0,0,0,0.2);
  margin: 20rpx 0;
}
.ask-icon::after{
  content: '\e7a1';
}
.answer-icon::after{
  content: '\e777';
}
.question-item text{
  font-size: 28rpx;
}
.question-item .ask{
  color: #348ce6;
}
.question-item .answer{
  color: #666;
}
.question-item .icon{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.intro1 .title , .intro .title{
  font-size: 48rpx;
}